<Window x:Class="CookBook.EditRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ערוך מתכון" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="RecipeIdTextBox" DataContext="ID של המתכון לעריכה" Text="" />
            <TextBox x:Name="RecipeNameTextBox" DataContext="שם מתכון חדש" />
            <TextBox x:Name="RecipeDescriptionTextBox" DataContext="תיאור מתכון חדש" />
            <TextBox x:Name="RecipeIngredientsTextBox" DataContext="מרכיבים חדשים (מופרדים בפסיק)" />
            <Button Content="ערוך מתכון" Click="EditRecipeButton_Click" />
        </StackPanel>
    </Grid>
</Window>
