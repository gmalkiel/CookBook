<Window x:Class="CookBook.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="פרטי מתכון" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="RecipeIdTextBox" DataContext="ID של המתכון" />
        <Button Content="הצג פרטים" Click="ShowDetailsButton_Click" />
        <StackPanel x:Name="DetailsPanel">
            <TextBlock x:Name="RecipeNameTextBlock" Text="שם מתכון" />
            <TextBlock x:Name="RecipeDescriptionTextBlock" Text="תיאור" />
            <TextBlock x:Name="RecipeRatingTextBlock" Text="דירוג" />
            <Image x:Name="RecipeImage" Width="200" Height="200" />
            <TextBlock x:Name="RecipeUsageTextBlock" Text="שימושים" />
            <TextBlock x:Name="RecipeCommentsTextBlock" Text="הערות" />
        </StackPanel>
    </Grid>
</Window>
