<Window x:Class="CookBook.SearchByIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="חפש מתכונים לפי מרכיב" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="IngredientTextBox" DataContext="מרכיב" />
        <Button Content="חפש" Click="SearchButton_Click" />
        <ListView x:Name="IngredientSearchResultsListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="שם מתכון" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="תיאור" DisplayMemberBinding="{Binding Description}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
