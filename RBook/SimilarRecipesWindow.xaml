<Window x:Class="CookBook.SimilarRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="מתכונים דומים" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="RecipeIdTextBox" DataContext="ID של המתכון" />
        <Button Content="הצג מתכונים דומים" Click="ShowSimilarRecipesButton_Click" />
        <ListView x:Name="SimilarRecipesListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="שם מתכון" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="תיאור" DisplayMemberBinding="{Binding Description}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
